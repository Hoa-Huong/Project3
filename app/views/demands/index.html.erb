<div class="container">
  <h1 class="demands-title">Nhu cầu mới</h1>
  <div class="row">
    <div class="col-sm-4 col-sm-push-8">
      <%= form_tag(demands_path, method: :get) do %>
      <div class="col-sm-8">
        <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2" %>
      </div>
      <div class="col-sm-4">
        <%= submit_tag 'Search', class: "btn btn-outline-success my-2 my-sm-0" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="demands">
      <%= render @demands %>
    </div>
  </div>
</div>
<%= paginate @demands%>
